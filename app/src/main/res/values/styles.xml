<?xml version="1.0" encoding="UTF-8"?>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionButtonStyle">@style/myActionButtonStyle</item>
        <item name="actionButtonStyle">@style/myActionButtonStyle</item>
    </style>
    <style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">20dp</item>
        <item name="android:maxWidth">36dp</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:width">32dp</item>
    </style>

    <style name="cercleImg">

    <item name="cornerSize">50%</item>

</style>
    -<style name="RedBtn">

    <item name="backgroundTint">#FF0000</item>

    <item name="android:textSize">30dp</item>
</style>
    -<style name="btn_number">

    <item name="android:textColor">@color/white</item>
</style>
    -<style name="ecran">

    <item name="android:background">#000000</item>

    <item name="android:textColor">#95F55A</item>

    <item name="android:textSize">35sp</item>

    <item name="android:textAlignment">textEnd</item>

    <item name="android:padding">15dp</item>

</style>

    <style name="circularImage">
        <item name="cornerSize">50%</item>
    </style>

    <style name="up_down_scroll_thumb">
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
    </style>

    <style name="NavigationDrawerStyle">

        <item name="android:textSize">14sp</item><!-- text size in menu-->

        <!-- item size in menu-->
        <item name="android:listPreferredItemHeightSmall">32dp</item>
        <item name="listPreferredItemHeightSmall">32dp</item>

        <!-- item padding left in menu-->
        <item name="android:listPreferredItemPaddingLeft">4dp</item>
        <item name="listPreferredItemPaddingLeft">4dp</item>

        <!-- item padding right in menu-->
        <item name="android:listPreferredItemPaddingRight">8dp</item>
        <item name="listPreferredItemPaddingRight">8dp</item>
    </style>

</resources>