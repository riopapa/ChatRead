<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
    android:orientation="vertical"
    android:background="@color/color_tab_stock_background"
    tools:context=".edit.ActivityEditTable">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_table"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/key_table"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="8"
            android:inputType="text"
            android:textColor="#FFF"
            android:hint="@string/enter_search_key"
            android:autofillHints="Enter Text to search" />

        <ImageButton
            android:id="@+id/search_table"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:contentDescription="@string/search"
            android:src="@drawable/search" />

        <ImageButton
            android:id="@+id/searchNext_table"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:contentDescription="@string/search"
            android:src="@drawable/arrow_right" />

    </LinearLayout>

    <EditText
        android:id="@+id/text_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:autofillHints="Table text"
        android:cursorVisible="true"
        android:focusable="false"
        android:inputType="text|textMultiLine"
        android:scrollbars="vertical"
        android:text="@string/active_say_table_list"
        android:textSize="15sp"
        android:textColor="#FFF"
        />

</LinearLayout>