<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/one_line_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#CCC"
    android:layout_margin="4dp"
    android:padding="2dp" >

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_margin="1dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/one_group"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/textFore"
            android:textSize="@dimen/app_line_font_size"
            android:text="group"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/one_group_full"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/textFore"
            android:textSize="@dimen/app_line_font_size"
            android:text="Who"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/one_group_whos"
            android:layout_width="0dp"
            android:layout_weight="12"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/textFore"
            android:textSize="@dimen/app_line_font_size"
            android:text=" "
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:background="#DCD"
        android:layout_margin="1dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/one_dummp"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/textFore"
            android:textSize="@dimen/app_line_font_size"
            android:text=" "
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/one_group_skip1"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/textFore"
            android:textSize="@dimen/app_line_font_size"
            android:text="skip1"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/one_group_skip2"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/textFore"
            android:textSize="@dimen/app_line_font_size"
            android:text="skip2"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/one_group_skip3"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/textFore"
            android:textSize="@dimen/app_line_font_size"
            android:text="skip3"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/one_group_telegram"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/textFore"
            android:textSize="@dimen/app_line_font_size"
            android:text=" "
            />

        <TextView
            android:id="@+id/one_group_ignore"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/textFore"
            android:textSize="@dimen/app_line_font_size"
            android:text="ignore"
            android:maxLines="1"
            />

    </LinearLayout>

</LinearLayout>

