<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_tab_app_background"
    tools:context=".edit.ActivityEditAlert">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_edit_alert"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/first_line"
        />

    <LinearLayout
        android:id="@+id/first_line"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/t_group"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Group"
            android:textSize="@dimen/alert_font_size"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/e_group"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="@string/todo"
            android:textSize="@dimen/alert_font_size"
            />
        <TextView
            android:id="@+id/t_who"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Who"
            android:textSize="@dimen/alert_font_size"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/e_who"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="@string/todo"
            android:textSize="@dimen/alert_font_size"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/t_key1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="Key1"
            android:textSize="@dimen/alert_font_size"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/e_key1"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="@string/todo"
            android:textSize="@dimen/alert_font_size"
            />

        <EditText
            android:id="@+id/e_key2"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="@string/todo"
            android:textSize="@dimen/alert_font_size"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/t_talk"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="talk"
            android:textSize="@dimen/alert_font_size"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/e_talk"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="@string/todo"
            android:textSize="@dimen/alert_font_size"
            />

        <EditText
            android:id="@+id/e_skip"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="@string/todo"
            android:textSize="@dimen/alert_font_size"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/l_matched"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            app:boxStrokeColor="#229944"
            app:hintTextColor="#229944"
            style="@style/AppTheme"
            >
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/e_matched"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:hint="Matched"
                android:gravity="right"
                android:inputType="numberSigned"
                android:text="@string/todo"
                android:textSize="@dimen/alert_font_size"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/t_prev"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Prev"
            android:textSize="@dimen/alert_font_size"
            />

    <EditText
        android:id="@+id/e_prev"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="@string/todo"
        android:textSize="@dimen/alert_font_size"
        app:layout_constraintLeft_toRightOf="@id/t_prev"
        app:layout_constraintRight_toLeftOf="@id/e_next"
        app:layout_constraintTop_toTopOf="@id/t_prev"
        app:layout_constraintBottom_toBottomOf="@id/t_prev"
        />

    <EditText
        android:id="@+id/e_next"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="@string/todo"
        android:textSize="@dimen/alert_font_size"
        android:autofillHints = "Next" />

    <TextView
        android:id="@+id/t_quiet"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="Quiet"
        />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/s_quiet"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        />
    </LinearLayout>
</LinearLayout>