<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#66AAAAAA"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="Key 1, 2"
            android:textSize="12sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/dlg_key1"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:autofillHints="Key1"
            android:hint="Key 1"
            android:textSize="12sp"
            android:inputType="text"
            />

        <EditText
            android:id="@+id/dlg_key2"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:autofillHints="Key1"
            android:hint="Key 2"
            android:textSize="12sp"
            android:inputType="text"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="Prv,Nxt"
            android:textSize="12sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/dlg_prev"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:autofillHints="Prev"
            android:hint="Prev"
            android:textSize="12sp"
            android:inputType="text"
            />

        <EditText
            android:id="@+id/dlg_next"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:autofillHints="Next"
            android:hint="Next"
            android:textSize="12sp"
            android:inputType="text"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="Talk,Skip"
            android:textSize="12sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/dlg_talk"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:autofillHints="Talk"
            android:hint="Talk"
            android:textSize="12sp"
            android:inputType="text"
            />

        <EditText
            android:id="@+id/dlg_skip"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:autofillHints="Skip"
            android:hint="Skip"
            android:textSize="12sp"
            android:inputType="text"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="Count"
            android:textSize="12sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/dlg_count"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:autofillHints="Prev"
            android:hint="Count"
            android:textSize="12sp"
            android:inputType="numberSigned"
            />

        <EditText
            android:id="@+id/dlg_won"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:autofillHints="Prev"
            android:hint="원"
            android:textSize="12sp"
            android:inputType="numberSigned"
            />

    </LinearLayout>

</LinearLayout>
